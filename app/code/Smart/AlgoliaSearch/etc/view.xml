<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="thumbnail" type="thumbnail">
                <width>140</width>
                <height>140</height>
                <frame>false</frame>
                <transparency>true</transparency>
            </image>
            <image id="image" type="image">
                <width>240</width>
                <height>300</height>
                <frame>false</frame>
                <transparency>true</transparency>
            </image>
            <image id="image" type="small_image">
                <width>240</width>
                <height>300</height>
                <frame>false</frame>
                <transparency>true</transparency>
            </image>
        </images>
    </media>
</view>
